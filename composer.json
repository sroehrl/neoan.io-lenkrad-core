{
  "name": "neoan.io/core",
  "description": "Neoan.io Lenkrad Framework",
  "minimum-stability": "stable",
  "license": "MIT",
  "authors": [
    {
      "name": "Stefan Roehrl",
      "email": "neoan@neoan.us"
    }
  ],
  "require": {
    "php": "~8.1",
    "neoan3-apps/template": "^1.2",
    "neoan3-apps/db": "^0.3.6",
    "vlucas/phpdotenv": "^5.4",
    "symfony/console": "^6.1",
    "ext-pdo": "*"
  },
  "autoload": {
    "psr-4": {
      "Neoan\\": "./",
      "Test\\": "./Tests/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "9.5"
  },
  "scripts": {
    "test": ["phpunit --configuration phpunit.xml --teamcity","php -f Tests/get-coverage.php -- 80 verbose"],
    "current-coverage": "php -f Tests/get-coverage.php -- 80"
  }
}
